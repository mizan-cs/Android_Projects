<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.project.mizan.mygpi.GetUserInformation">

    <TextView
        android:textColor="#F72671"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Welcome to Hello GPI\nPlz give your information to make your GPI profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ID_UserNameText"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ID_UserDept"
        android:layout_gravity="center_horizontal" />
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ID_UserSamester"
        android:layout_gravity="center_horizontal" />
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ID_UserShift"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/ID_UserSubmitButton"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<Button-->
    <!--android:id="@+id/ID_ShowUserInfoButton"-->
    <!--android:layout_marginTop="10dp"-->
        <!--android:text="Show Save Info"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


</LinearLayout>
