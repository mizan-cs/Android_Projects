<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#515658"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#F72671"
            android:id="@+id/ID_1ClassTime"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Time"/>
        <TextView
            android:textColor="#F72671"
            android:id="@+id/ID_1ClassName"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eng. Drowing"/>
        <TextView
            android:textColor="#F72671"
            android:id="@+id/ID_1ClassRoom"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drowing Lab"/>
        <Button
            android:id="@+id/ID_1ClassTeacher"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasema Khanom"/>
    </LinearLayout>

</LinearLayout>