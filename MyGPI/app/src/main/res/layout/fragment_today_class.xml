<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:padding="10dp"
    tools:context="com.project.mizan.mygpi.TodayClass">


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="Dept of "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ID_UserDeptName"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="CmT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ID_UserSemesterName"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="1st-Semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ID_UserShiftName"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="1st-Shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:gravity="center"
        android:textColor="#fff"
        android:text="Tuesday"
        android:id="@+id/ID_TodayCalander"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_gravity="center"
        android:background="#575754"
        android:id="@+id/ID_TodayClassList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>



</LinearLayout>
