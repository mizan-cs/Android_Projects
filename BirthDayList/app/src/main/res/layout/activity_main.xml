<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.mizan.birthdaylist.MainActivity">

    <EditText
        android:id="@+id/ID_Friend_Name"
        android:layout_marginTop="10dp"
        android:hint="Enter Friend's Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ID_Finend_Birthday"
        android:layout_marginTop="10dp"
        android:hint="Birth Day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ID_Save_Button"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ID_Show_Button"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:text="Show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
